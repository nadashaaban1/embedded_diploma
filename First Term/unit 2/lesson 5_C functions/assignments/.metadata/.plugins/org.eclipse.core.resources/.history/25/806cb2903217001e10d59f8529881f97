#include <stdio.h>
#include <string.h>
void reverse(char sentence[],int n)
{
	int i=n;
	while(i>=0)
	{
		printf("%c",sentence[i]);
		i--;
		reverse(sentence,i);

	}
}
int main()
{
	char sentence[100];
	printf("Enter a sentence: ");
	fflush(stdin); fflush(stdout);
	gets(sentence);
	reverse(sentence,strlen(sentence));


}
