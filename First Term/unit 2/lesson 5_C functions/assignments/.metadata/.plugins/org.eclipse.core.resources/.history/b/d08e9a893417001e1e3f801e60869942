#include <stdio.h>
#include <string.h>
void calcPower(int base,int n)
{
	int val=base;
	val=val*calcPower(val,n-1);
	if(n==1)
	{
	printf("%d^%d = %d",base,n,val);
	return;
	}
}
int main()
{
	int base,n;
	printf("Enter base number: ");
	fflush(stdin); fflush(stdout);
	scanf("%d",base);
	printf("Enter power number(positive integer: ");
	fflush(stdin); fflush(stdout);
	scanf("%d",n);
	calcPower(base,n);


}
