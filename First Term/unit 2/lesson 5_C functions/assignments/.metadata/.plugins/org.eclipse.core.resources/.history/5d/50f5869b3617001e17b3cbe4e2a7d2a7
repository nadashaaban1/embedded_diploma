#include <stdio.h>
#include <string.h>
void calcPower(int base,int n)
{
	//if(n==1) printf("%d^%d = %d",base,n,val);
	int val=base;
	if(n>0)
	printf("%d",val*calcPower(base,n-1));
	else
		return;
}
int main()
{
	int base,n;
	printf("Enter base number: ");
	fflush(stdin); fflush(stdout);
	scanf("%d",&base);
	printf("Enter power number(positive integer): ");
	fflush(stdin); fflush(stdout);
	scanf("%d",&n);
	calcPower(base,n);



}
