#include <stdio.h>

int main()
{
	int n=0;
	float arr[100], avg=0;
	printf("Enter the numbers of data: ");
	fflush(stdin); fflush(stdout);
	scanf("%d",n);
	for(int i=0; i<n; i++)
	{
		printf("%d. Enter number: ",i+1);
		fflush(stdin); fflush(stdout);
			scanf("%f",arr[i]);
			avg=(avg+arr[i])/n;
	}
	//scanf("Average = %f",avg);
}

