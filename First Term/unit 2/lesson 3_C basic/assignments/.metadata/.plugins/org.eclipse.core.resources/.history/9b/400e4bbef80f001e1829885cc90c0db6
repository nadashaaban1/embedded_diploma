#include <stdio.h>

int main()
{
	char a;
	printf("Enter an alphabet: ");
	fflush(stdin); fflush(stdout);
	scanf("%c",&a);
	if(a=='a'||'A'||'e'||'E'||'i'||'I'||'o'||'O'||'u'||'U')
	{
		printf("%c is a vowel.",a);
	}
	else
	{
		printf("%c is a consonant.",a);
	}

}
