#include <stdio.h>

int main()
{
	char a;
	printf("Enter an alphabet: ");
	fflush(stdin); fflush(stdout);
	scanf("%d",&a);
	if(a=='a'||a=='A'||a=='e'||a=='E'||a=='i'||a=='I'||a=='o'||a=='O'||a=='u'||a=='U')
		printf("%c is a vowel.",a);
	else
		printf("%c is a consonant.",a);


}
